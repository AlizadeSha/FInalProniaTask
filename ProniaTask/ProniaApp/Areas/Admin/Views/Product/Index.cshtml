@{
    ViewData["Title"] = "Index";
}
@using ProniaApp.ViewModels.Products
@model IEnumerable<GetProductAdminVM>
<h5 class="card-title  fw-semibold mb-4">Products</h5>
<a asp-action="Create" class="btn btn-outline-success m-1">Create</a>
<div class="table-responsive">
    <table class="table table-bordered text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Image</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Name</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">CostPrice</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">SellPrice</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Discount</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">StockCount</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Raiting</h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.Id</h6>
                    </td>
                    <td class="border-bottom-0">
                        <img src="@data.ImageUrl" width="50px">
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.Name</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.CostPrice</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.SellPrice</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.Discount</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.StockCount</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">@data.Raiting</h6>
                    </td>
                    <td class="border-bottom-0">
                        <a asp-action="Update" asp-route-id="@data.Id" class="btn btn-warning">Update</a>
                        <a asp-action="Delete" asp-route-id="@data.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

